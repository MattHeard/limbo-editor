#!/usr/bin/env ruby

def descriptions
  descriptions = {
    'new' => 'creates a new project',
    'list-tests' => 'lists test descriptions'
  }
  descriptions.default = 'Limbo EDitor'
  descriptions
end

def subcommand
  ARGV.first
end

def list_tests?
  subcommand != 'list-tests'
end

def help?
  ARGV[1] == '--help'
end

def describe_subcommand
  puts descriptions[subcommand]
end

def test_dir
  './tmp/spec'
end

def test_contents
  %x{cat #{test_dir}/*}
end

if list_tests? || help?
  describe_subcommand
else
  descriptions = test_contents.split("\n")
  matches = descriptions.map { |d| d.match(/describe '(.*)'/) }
  features = matches.map { |m| m[1] }
  puts features.join("\n")
end
